{
    "name": "bafs/chip8",
    "authors": [
        {
            "name": "BafS",
            "email": "fabacrans@gmail.com"
        }
    ],
    "bin": [
        "bin/chip8"
    ],
    "require": {
        "php": ">=8.1",
        "symfony/console": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "BafS\\Chip8\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "~1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
